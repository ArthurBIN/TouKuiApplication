.All {
  width: 90%;
  margin: 0 auto;
  position: relative;
}
.topBtn_box {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid rgb(247, 247, 247);
  margin-bottom: 20rpx;
  z-index: 99;
  background-color: #fff;
}
.kong {
  width: 100%;
  height: 100rpx;
}
.topBtn {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 20rpx;
  width: 70rpx;
  font-size: 24rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-weight: 700;
  border-bottom: 7rpx solid rgb(224, 224, 224);
}

.zpitem {
  width: 100%;
  padding: 30rpx 0;
  border-bottom: 1px solid rgb(236, 236, 236);
}

.zpitem_txBox {
  width: 100%;
  height: 130rpx;
  display: flex;
  align-items: center;
}
.txBox {
  position: relative;
  width: 90rpx;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  border-radius: 50%;
}
.zpusername {
  margin-left: 20rpx;
  font-size: 30rpx;
  font-family: '黑体';
}
.usertx {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.zptitle {
  font-size: 32rpx;
  font-weight: 700;
  font-family: '黑体';
  margin-top: 20rpx;
}
.zpcontent {
  font-size: 31rpx;
  font-family: '黑体';
  margin-top: 15rpx;
  color: rgb(88, 88, 88);
}
.zpimgBox {
  width: 100%;
  height: 550rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  border-radius: 20rpx;
  margin-top: 20rpx;
}
.zpimg {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.bottomBox {
  width: 100%;
  height: 60rpx;
  position: relative;
  margin-top: 10rpx;
}
.gnbox {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 0;
  width: 200rpx;
  height: 50rpx;
  display: flex;
  text-align: right;
  align-items: center;
  justify-items: center;
}
.dzbox {
  flex: 1;
  width: 50rpx;
  height: 40rpx;
}
.dznum {
  display: inline-block;
  font-size: 25rpx;
  color: rgb(102, 102, 102);
  margin-left: 7rpx;
  vertical-align: top;
}
.setNewBox {
  position: fixed;
  right: 40rpx;
  bottom: 100rpx;
  width: 100rpx;
  height: 100rpx;
}
.setNewBox image {
  width: 100%;
  height: 100%;
}
.noZpBox {
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: rgb(170, 170, 170);
  font-size: 25rpx;
}
