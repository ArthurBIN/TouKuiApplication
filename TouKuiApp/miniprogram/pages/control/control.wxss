}
.controlBtn_Right {
	width: 45%;
	margin: 0 2.5%;
}
.gn_btn {
	width: 100%;
	border-radius: 40rpx;
	box-shadow: 0 0 40rpx 0 rgba(173, 173, 173, 0.2);
}
.Electricity_Btn {
	height: 300rpx;
	padding: 0 25rpx;
	box-sizing: border-box;
}
.Open_Fan_Btn {
	height: 150rpx;
	display: flex;
	justify-items: center;
	align-items: center;
}
.Light_Btn {
	height: 150rpx;
	margin-top: 2.5vh;
}
.Volume_btn {
	height: 300rpx;
	margin-top: 2.5vh;
}
.Fan_Img_box {
	width: 17%;
}
.rotate {
	color: #99e2db;
	transform: rotate(720deg);
  }
.FanImg {
	margin-left: 50rpx;
	font-size: 50rpx;
	transition: transform 1s ease-in-out,color 0.5s ease-in-out;
}
.Fan_Text {
	font-size: 32rpx;
	font-weight: 700;
	margin-left: 40rpx;
}
.OpenFan_down {
	font-size: 28rpx;
	font-weight: 500;
	color: rgb(172, 172, 172);
	margin-top: 10rpx;
}
.ElTopBox {
	width: 100%;
	padding-top: 22rpx;
	position: relative;
}

.ElText_down {
	font-size: 23rpx;
	color: rgb(172, 172, 172);
}
