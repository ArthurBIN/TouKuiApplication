.topBox {
	width: 100%;
	height: 11.5vh;
	margin: 0 auto;
	position: relative;
}
.userBoxItem {
	width: 100%;
	position: absolute;
	left: 30rpx;
	bottom: 1vh;
	display: flex;
	align-items: center;
}

.username {
	margin-left: 10rpx;
	font-size: 35rpx;
	font-weight: 700;
}

.TK_Img_Box {
	width: 100%;
	height: 37vh;
	display: flex;
	justify-items: center;
	align-items: center;

}
.TKImg_box {
	width: 45%;
	display: flex;
	justify-items: center;
	align-items: center;
	margin: auto;
}
.tkimg {
	width: 100%;
}
.controlBtn_Box {
	position: relative;
	width: 90%;
	margin: 0 auto;
	margin-top: -20rpx;
	display: flex;
}
.controlBtn_Left {
	width: 45%;
	margin: 0 2.5%;
}
.controlBtn_Right {
	width: 45%;
	margin: 0 2.5%;
}
.gn_btn {
	width: 100%;
	border-radius: 40rpx;
	box-shadow: 0 0 40rpx 0 rgba(173, 173, 173, 0.2);
}
.Electricity_Btn {
	height: 300rpx;
	padding: 0 25rpx;
	box-sizing: border-box;
}
.Open_Fan_Btn {
	height: 150rpx;
	display: flex;
	justify-items: center;
	align-items: center;
}
.Light_Btn {
	height: 150rpx;
	margin-top: 2.5vh;
}
.Volume_btn {
	height: 300rpx;
	padding: 0 25rpx;
	box-sizing: border-box;
	margin-top: 2.5vh;
}
.Fan_Img_box {
	width: 17%;
}
.rotate {
	color: #99e2db;
	transform: rotate(720deg);
  }
.FanImg {
	margin-left: 50rpx;
	font-size: 50rpx;
	transition: transform 1s ease-in-out,color 0.5s ease-in-out;
}
.Fan_Text {
	font-size: 32rpx;
	font-weight: 700;
	margin-left: 40rpx;
}
.OpenFan_down {
	font-size: 28rpx;
	font-weight: 500;
	color: rgb(172, 172, 172);
	margin-top: 10rpx;
}
.ElTopBox {
	width: 100%;
	padding-top: 22rpx;
	position: relative;
}

.ElText_down {
	font-size: 23rpx;
	color: rgb(172, 172, 172);
}
.ElTopBox_Img {
	position: absolute;
	width: 60rpx;
	height: 60rpx;
	top: 30rpx;
	right: 5rpx;
}
.elimg {
	width: 100%;
	height: 100%;
}
.ElDownBox {
	margin-top: 90rpx;
}
.RemainderEl {
	margin-bottom: 10rpx;
	font-size: 23rpx;
	color: rgb(172, 172, 172);
}
.RemainderEl_box {
	width: 100%;
	height: 45rpx;
	border-radius: 13rpx;
	background: linear-gradient(to right,#9ad4c0, #8cecd4 ); 
	text-align: right;
	overflow: hidden;
}
.RemainderEl_box_in {
	background-color: rgb(235, 235, 235);
	height: 100%;
	display: inline-block;
}
.Light_Btn {
	display: flex;
	justify-items: center;
	align-items: center;
}
.Light {
	color: #99e2db;
}
.controlYLBox {
	width: 100%;
	display: flex;
}
.YLBox {
	width: 47%;
	height: 50rpx;
	border-radius: 50rpx;
	background-color: rgb(245, 245, 245);
	text-align: center;
	line-height: 50rpx;
	color: rgb(160, 160, 160);
}
.YLBoxL {

}
.YLBoxR {
	margin-left: 6%;
}
.LeftTopBox {
	width: 100%;
	height: 140rpx;
	display: flex;
	justify-items: center;
	align-items: center;
	margin-bottom: 6vh;
}
.LeftTopBox_1,
.LeftTopBox_2 {
	width: 45%;
	height: 100%;
	box-shadow: 0 0 40rpx 0 rgba(173, 173, 173, 0.2);
	border-radius: 50rpx;
	line-height: 140rpx;
	text-align: center;
	transition: background-color 0.5s ease-in-out,color 0.5s ease-in-out;
}
.LeftTopBox_1 {
	
}
.LeftTopBox_2 {
	margin-left: 10%;
}

.LeftTopBox_1 i,
.LeftTopBox_2 i {
	font-size: 40rpx;
}
.topBtn1 {
	background-color: #77d8b3;
	color: white;
}
.topBtn2 {
	background-color: rgb( 87, 85,199);
	color: white;
}

/* 分割线 */
.Line {
	position: absolute;
	top: 183rpx;
	width: 90%;
	left: 50%;
	transform: translateX(-50%);
	height: 1px;
	background-color: rgb(241, 241, 241);
}
