.topBox {
	width: 100%;
	height: 11.5vh;
	margin: 0 auto;
	position: relative;
}
.userBoxItem {
	width: 100%;
	position: absolute;
	left: 30rpx;
	bottom: 1vh;
	display: flex;
	align-items: center;
}

.username {
	margin-left: 10rpx;
	font-size: 35rpx;
	font-weight: 700;
}

.TK_Img_Box {
	width: 100%;
	height: 40vh;
	display: flex;
	justify-items: center;
	align-items: center;

}
.TKImg_box {
	width: 60%;
	display: flex;
	justify-items: center;
	align-items: center;
	margin: auto;
}
.tkimg {
	width: 100%;
}
.controlBtn_Box {
	width: 90%;
	margin: 0 auto;
	display: flex;
