.All {
  width: 90%;
  margin: 0 auto;
}

.ImgBox {
  width: 100%;
  display: flex;
  align-items: center;
  justify-items: center;
  height: 200rpx;
}
.ImgBox_item {
  width: 150rpx;
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-items: center;
  overflow: hidden;
  background-color: rgb(231, 231, 231);
}
.ImgBox_item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.addText {
  display: flex;
  align-items: center;
  justify-items: center;
  height: 120rpx;
  border-bottom: 1px solid rgb(236, 236, 236);
}
.addTextInput {
  width: 100%;
  height: 90rpx;
  font-size: 35rpx;
  font-weight: 700;
  font-family: '黑体';
}
.addContent {
  margin-top: 30rpx;
  width: 100%;
  height: 700rpx;
  border-bottom: 1px solid rgb(236, 236, 236);
}
.contentText {
  font-size: 32rpx;
  font-family: '黑体';
}
.postBtn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: white;
  font-size: 29rpx;
  border-radius: 20rpx;
  margin-top: 40rpx;
  background-color: rgb(94, 94, 94);
}