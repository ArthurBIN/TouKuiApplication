.All {
  width: 100%;
  padding-bottom: 100rpx;
}
.ImgBox {
  width: 100%;
  height: 700rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.zpImg {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.userBox {
  width: 100%;
  height: 11vh;
  margin: 0 auto;
  position: relative;
}
.userBoxItem {
  width: 100%;
  position: absolute;
  left: 30rpx;
  bottom: 1vh;
  display: flex;
  align-items: center;
}
.userTxBox {
  width:  65rpx;
  height: 65rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
