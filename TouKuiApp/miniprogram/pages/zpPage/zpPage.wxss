  margin-left: 15rpx;
}
.tximg {
  width: 100%;
  height: 100%;
  object-fit: contain;
}
.username {
  margin-left: 10rpx;
  font-size: 27rpx;
}
.TCT {
  width: 90%;
  margin: 20rpx auto;
  border-bottom: 2rpx solid rgb(228, 228, 228);
  padding-bottom: 30rpx;
}
.textBox {
  font-size: 37rpx;
  font-family: '微软雅黑';
  font-weight: 700;
  margin-top: 40rpx;
  line-height: 1.2;
}
.contentBox {
  font-size: 33rpx;
  font-family: '微软雅黑';
  margin-top: 30rpx;
  line-height: 1.2;
}
.Time {
  font-family: '微软雅黑';
  font-size: 24rpx;
  color: rgb(151, 151, 151);
  margin-top: 30rpx;
}
.plBox {
  width: 90%;
  margin: 40rpx auto;
}
.plText {
  font-family: '微软雅黑';
  font-size: 33rpx;
  color: rgb(97, 97, 97);
}
.noplBox {
  width: 100%;
  height: 300rpx;
  text-align: center;
}
.noplimg {
  width: 200rpx;
  margin-top: 70rpx;
}

.yesplBox {
  width: 100%;
}
.plItem {
  width: 100%;
  position: relative;
  box-sizing: border-box;
  padding: 20rpx 0 40rpx 0;
  border-bottom: 2rpx solid rgb(228, 228, 228);
}
.txNameBox {
  width: 100%;
  height: 110rpx;
}
.txitemBox {
  height: 100rpx;
  display: flex;
  justify-items: center;
  align-items: center;
}
.pltxbox {
  width:  70rpx;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  overflow: hidden;
}
.pltximg {
  width: 100%;
  height: 100%;
  object-fit: contain;
}
.plName {
  font-size: 27rpx;
  margin-left: 15rpx;
  font-family: '黑体';
}
.plcontent {
  width: 100%;
  box-sizing: border-box;
  padding-left: 4.8vh;
  font-size: 27rpx;
  font-family: '黑体';
  color: rgb(102, 102, 102);
  line-height: 1.3;
}
.timeBox {
  padding-left: 4.8vh;
  font-size: 23rpx;
  font-family: '黑体';
  color: rgb(175, 175, 175);
  margin-top: 15rpx;
}
.bottomBox {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100vh;
}
.bottomBoxTopBox {
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, .3);
  height: calc(100vh - 330rpx);
}
.PostPl_input {
  position: absolute;
  left: 0;
  bottom: 0;
  height: 330rpx;
  width: 100%;
  border-radius: 30rpx 30rpx 0 0;
  background-color: #f2f2f2;
}
.plinputtext {
  width: 90%;
  height: 200rpx;
  background-color: #fff;
  margin: 30rpx auto;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  font-size: 27rpx;
}
.postPlBtn {
  width: 90%;
  margin: 0 auto;
  text-align: right;
}
.postBtn {
  display: inline-block;
  width: 80rpx;
  color: rgb(255, 255, 255);
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 20rpx;
  border-radius: 30rpx;
  background-color: rgb(0, 0, 0);
}
.PostPl {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: #ffffff;
}
.plinput {
  background-color: rgb(248, 248, 248);
  width: 60%;
  height: 70rpx;
  line-height: 70rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
  color: #979797;
  position: absolute;
  top: 50%;
  font-size: 25rpx;
  transform: translateY(-50%);
  left: 30rpx;
  border-radius: 35rpx;
}

.bottomIconBox {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 20%;
  right: 7%;
  height: 70rpx;
  line-height: 90rpx;
}
.bottomIcon {
  font-size: 40rpx;
  color: #7a7a7a;
}
.bottomIcon2 {
  margin-left: 50rpx;
}